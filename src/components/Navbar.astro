---
import { Image } from "astro:assets";
import Logo from "../assets/Logopng.png";

import Button from "../components/Button/Button.astro";
const WhatsAppIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp">
    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
    <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
    <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
  </svg>
`;

---
<nav class="sm:pl-8 sm:mt-2">
  <div class="mx-auto max-w-7xl px-2 pt-0 sm:px-6 lg:px-8">
      <div class="relative 
                  sm:flex sm:flex-row 
                  sm:justify-between 
                  sm:items-center 
                  h-16">
        
        <div class="flex shrink-0 items-center">
          <Image class="h-8 w-auto" src={Logo} alt="comeaqui company name" loading="eager" />
        </div>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4">
            <a href="#" class="rounded-md bg-[#6b65a6] px-3 py-2 text-1xl font-bold text-white" aria-current="page">Home</a>
            <a href="#" class="rounded-md px-3 py-2 text-1xl font-bold text-black hover:bg-[#6b65a6] hover:text-white">Menu</a>
            <a href="#" class="rounded-md px-3 py-2 text-1xl font-bold text-black hover:bg-[#6b65a6] hover:text-white">Dishes</a>
            <a href="#" class="rounded-md px-3 py-2 text-1xl font-bold text-black hover:bg-[#6b65a6] hover:text-white">About Us</a>
         
          </div>
        </div>
        <div class="absolute rounded-full inset-y-0 right-0 flex items-center 
                  p-2 sm:static sm:inset-auto ml-6 pr-0 bg-white">
         <Button name="Contact Us" iconoBack={WhatsAppIcon}/>
        </div>
     </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="sm:hidden" id="mobile-menu">
    <div class="space-y-1 px-2 pt-2 pb-3">
      <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
      <a href="#" class="block rounded-md bg-[#6b65a6] px-3 py-2 text-1xl text-white font-bold"  aria-current="page">Home</a>
      <a href="#" class="block rounded-md px-3 py-2 text-1xl font-bold text-black hover:bg-[#6b65a6] hover:text-white">Menu</a>
      <a href="#" class="block rounded-md px-3 py-2 text-1xl font-bold text-black hover:bg-[#6b65a6] hover:text-white">Dishes</a>
      <a href="#" class="block rounded-md px-3 py-2 text-1xl font-bold text-black hover:bg-[#6b65a6] hover:text-white">About Us</a>
    </div>
  </div>
</nav>
